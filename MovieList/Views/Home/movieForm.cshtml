@{
    ViewBag.Title = "Movie Form";
}

@model MovieList.Models.modelResponse
<div class="row">
    <div class="column"></div>
    <div class="column">
        <!-- Form-->
        <form asp-action="movieForm" method="post">
            <div>
                <label asp-for="Category">Category:</label>
                <input asp-for="Category" />
            </div>

            <div>
                <label asp-for="Title">Title:</label>
                <input asp-for="Title" />
            </div>

            <div>
                <label asp-for="Year">Year:</label>
                <input asp-for="Year" />
            </div>

            <div>
                <label asp-for="Director">Director:</label>
                <input asp-for="Director" />
            </div>

            <div>
                <!-- Give choices instead of input-->
                <label asp-for="Rating">Rating:</label>
                <select asp-for="Rating">
                    <option value="">Select One</option>
                    <option value="G">G</option>
                    <option value="PG">PG</option>
                    <option value="PG-13">PG-13</option>
                    <option value="R">R</option>
                </select>
            </div>

            <div>
                <!-- Give choices instead of input-->
                <label asp-for="Edited">Edited:</label>
                <select asp-for="Edited">
                    <option value="">Select One</option>
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
            </div>

            <div>
                <label asp-for="Lent">Lent To:</label>
                <input asp-for="Lent" />
            </div>

            <div>
                <label asp-for="Notes">Notes:</label>
                <input asp-for="Notes" />
            </div>

            <button type="submit">Enter Movie</button>
        </form>

        <!-- This bottom part will show our validator messages.-->
        <div asp-validation-summary="All"></div>
    </div>
    <div class="column"></div>
</div>  