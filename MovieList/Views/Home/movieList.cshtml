@{
    ViewBag.Title = "List of Movies";
}

@model IEnumerable<MovieList.Models.modelResponse>
<div class="row">
    <div class="column"></div>
    <div class="column">
        <!-- List of movies -->
        <h2>List of Movies Entered:</h2>


        <table>
            <thead>
                <tr>
                    <th>
                        Category
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Year
                    </th>
                    <th>
                        Director
                    </th>
                    <th>
                        Rating
                    </th>
                    <th>
                        Edited
                    </th>
                    <th>
                        Lent To
                    </th>
                    <th>
                        Notes
                    </th>
                </tr>
            </thead>

            <tbody>
                <!-- Using c# to loop through movies.-->
                @foreach (MovieList.Models.modelResponse x in Model)
                {
                    <tr>
                        <td>@x.Category</td>
                        <td>@x.Title</td>
                        <td>@x.Year</td>
                        <td>@x.Director</td>
                        <td>@x.Rating</td>
                        <td>@x.Edited</td>
                        <td>@x.Lent</td>
                        <td>@x.Notes</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="column"></div>
</div> 